source "https://rubygems.org"

# Specify your Jekyll version
gem "jekyll", ">= 3.6.3"

# Theme
gem "minima", "~> 2.0"

# Common plugins and markdown processor
gem "jekyll-paginate"
gem "kramdown-parser-gfm"  # use GitHub-Flavored Markdown
gem "commonmarker"         # replaces github-markdown

group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.6"
end

# Optional: if using GitHub Pages (uncomment if needed)
# gem "github-pages", group: :jekyll_plugins

# Windows platform fix
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby]
